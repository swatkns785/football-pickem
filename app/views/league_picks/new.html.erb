<h3>Select one team per game below.</h3>

<%= form_for([@league_week, @league_picks]) do |f| %>
  <% @league_games.each do |league_game| %>
    <div>
      <%= f.label :entry, league_game.visitor_team %>
      <%= f.radio_button :entry, league_game.visitor_team %>
      <%= f.label :entry, league_game.home_team %>
      <%= f.radio_button :entry, league_game.home_team %>
    </div>
  <% end %>
  <%= f.submit %>
<% end %>
